@startuml
'https://plantuml.com/class-diagram

class Player {
-String playerName
-<ArrayList> addPlayer
}

class Team {
-String teamName
+AddMemberToTeam()
+String toString()
}

class Match{
-int matchId
+addPoints()
+getPoints()
+String toString()
}

class Tournament {
+ArrangeMatch()
+getTeamPlacement()
+String toString()
+getMatchSchedule()
+getNextMatch()
}

class TournamentOrganizer {
-Player player
+createTeam()
+String toString()
}

Tournament o-- "1" TournamentOrganizer
Tournament *-- "8" Match
Tournament *-- Player
Tournament *-- Team
Match o-- "2" Team
Team o-- "2..*" Player

@enduml